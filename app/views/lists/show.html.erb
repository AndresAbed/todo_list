<h3><%= @list.name %></h3>
<ol>
  <% @list.items do |item| %>
    <li><%= item.description %></li>
  <% end %>
</ol>

<% if flash[:notice] %>
  <p><%= flash[:notice]%></p>
<% end %>
<% if flash[:error] %>
  <p><%= flash[:error]%></p>
<% end %>

<%= form_with model: [@list, @list.items.build], local: true do |form| %>
  <%= form.fields_for :item do |item| %>
    <%= item.text_field :description %>
  <% end %>
  <%= form.submit %>
<% end %>
